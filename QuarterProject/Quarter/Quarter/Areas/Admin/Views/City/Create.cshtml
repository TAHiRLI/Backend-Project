
@{
    ViewData["Title"] = "Create";
}

@model City
<div class="w-100 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create city</h4>

            <form asp-action="create" method="post" class="form-inline">
                <label asp-for="Name" class="sr-only" for="inlineFormInputName2">City Name</label>
                <div>
                    <input asp-for="Name" class="form-control mb-2 mr-sm-2">
                </div>



                <button type="submit" class="btn btn-primary ">Create</button>
                <a class="btn btn-light" asp-action="index" asp-controller="City">Cancel</a>

            </form>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
</div>



@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
