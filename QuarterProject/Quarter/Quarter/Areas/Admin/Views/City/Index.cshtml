@model List<City>

@{
    ViewData["Title"] = "Index";
    var counter = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic Table</h4>
            <div class="col-12  text-end"><a class="text-end d-block" asp-action="create" asp-controller="city">Create</a></div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name.</th>
                            <th>Properities in this area</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var city in Model)
                        {
                            counter++;
                            <tr>
                            <td>@counter</td>
                            <td>@city.Name</td>
                            <td>@city.Houses.Count</td>
                            <td>
                                    <a asp-action="edit" asp-action="city" asp-route-id="@city.Id"><i style ="font-size:20px" class="mdi mdi-lead-pencil"></i></a>
                                    <a class="delete-btn" asp-action="delete" asp-action="city" asp-route-id="@city.Id"><i style="font-size:20px" class="mdi mdi-close-circle text-danger "></i></a>
                            </td>
                        </tr>
                        }
                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/admin/js/Main.js"></script>

  
}

          