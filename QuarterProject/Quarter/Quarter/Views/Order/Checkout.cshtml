
@{
    ViewData["Title"] = "Checkout";
}
@model Order

<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="../img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Checkout</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a asp-action="index" asp-controller="home"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>Checkout</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- WISHLIST AREA START -->
<div class="ltn__checkout-area mb-105">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__checkout-inner">
                    <div class="ltn__checkout-single-content mt-50">
                        <h4 class="title-2">Billing Details</h4>
                        <div class="ltn__checkout-single-content-info">
                            <form asp-action="checkout" method="post">
                                <h6>Personal Information</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="input-item input-item-name ltn__custom-icon">
                                            <input asp-for="Fullname" type="text" value="@Model.AppUser?.Fullname"  placeholder="Full name">
                                            <span class="text-danger" asp-validation-for="Fullname"></span>
                                        </div>
                                    </div>
                                 
                                    <div class="col-md-6">
                                        <div class="input-item input-item-email ltn__custom-icon">
                                            <input asp-for="Email" type="email" value="@Model.AppUser?.Email" placeholder="email address">
                                            <span class="text-danger" asp-validation-for="Email"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="input-item input-item-phone ltn__custom-icon">
                                            <input asp-for="PhoneNumber" value="" type="text"  placeholder="phone number">
                                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                                        </div>
                                    </div>
                               
                                </div>
                                <div class="row">
                                    <div class="col-lg-12 col-md-12">
                                        <h6>Address</h6>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="input-item">
                                                    <input asp-for="Address1" type="text" placeholder="House number and street name">
                                            <span class="text-danger" asp-validation-for="Address1"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="input-item">
                                                    <input asp-for="Address2" type="text" placeholder="Apartment, suite, unit etc. (optional)">
                                                    <span class="text-danger" asp-validation-for="Address2"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-6">
                                        <h6>Town / City</h6>
                                        <div class="input-item">
                                            <input asp-for="City" type="text" placeholder="City">
                                            <span class="text-danger" asp-validation-for="City"></span>
                                        </div>
                                    </div>
                               
                                    <div class="col-lg-4 col-md-6">
                                        <h6>Zip</h6>
                                        <div class="input-item">
                                            <input asp-for="ZipCode" type="text" placeholder="Zip">
                                            <span class="text-danger" asp-validation-for="ZipCode"></span>
                                        </div>
                                    </div>
                                </div>
                                <h6>Order Notes (optional)</h6>
                                <div class="input-item input-item-textarea ltn__custom-icon">
                                    <textarea asp-for="Note" placeholder="Notes about your order, e.g. special notes for delivery."></textarea>
                                     <span class="text-danger" asp-validation-for="Note"></span>
                                </div>
                                <input type="hidden" asp-for="HousePrice" value="@Model.HousePrice"/>
                                <input type="hidden" asp-for="HouseId" value="@Model.HouseId" />
                                <input type="hidden" asp-for="HouseTitle" value="@Model.HouseTitle" />
                                <button class="btn theme-btn-1 btn-effect-1 text-uppercase" type="submit">Place order</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping-cart-total mt-50">
                    <h4 class="title-2">Order Detail</h4>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>Property</td>
                                <td>  <a asp-action="details" asp-controller="house" asp-route-id="@Model.House.Id">@Model.House.Title</a></td>
                            </tr>
                            <tr>
                                <td>Owner</td>
                                 <td>@Model.House.Owner.Fullname</td>
                            </tr>
                           
                            <tr>
                                <td><strong>Order Total</strong></td>
                                <td><strong>$@((Model.House.Price*(100-Model.House.DiscountPercent)/100).ToString("0.00"))</strong></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- WISHLIST AREA START -->


 @section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
 }