@{
    ViewData["Title"] = "Register";
}

@model MemmberRegisterViewModel
<!-- BREADCRUMB AREA START -->
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image " data-bs-bg="../assets/img/bg/14.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ltn__breadcrumb-inner">
                    <h1 class="page-title">Account</h1>
                    <div class="ltn__breadcrumb-list">
                        <ul>
                            <li><a asp-action="index" asp-controller="home"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                            <li>Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB AREA END -->
<!-- LOGIN AREA START (Register) -->
<div class="ltn__login-area pb-110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">Register <br>Your Account</h1>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="account-login-inner">
                    <form asp-action="register" method="post" asp-controller="account" class="ltn__form-box contact-form-box" enctype="multipart/form-data">

                        <input asp-for="Fullname" placeholder="Fullname">
                        <span class="text-danger" asp-validation-for="Fullname"></span>

                        <input asp-for="Username" placeholder="UserName">
                        <span class="text-danger" asp-validation-for="Username"></span>

                        <input asp-for="Email" type="email" placeholder="Email*">
                        <span class="text-danger" asp-validation-for="Email"></span>

                        <input asp-for="Password" type="password" placeholder="Password*">
                        <span class="text-danger" asp-validation-for="Password"></span>

                        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password*">
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        <div class="my-2">

                            <label asp-for="File">User Profile Photo</label><br />
                            <input asp-for="File" placeholder="Fullname">
                            <span class="text-danger" asp-validation-for="File"></span>

                        </div>

                        <label asp-for="IsSubscribed" class="checkbox-inline">

                            <input asp-for="IsSubscribed" type="checkbox">

                            I consent to Herboil processing my personal data in order to send personalized marketing material in accordance with the consent form and the privacy policy.
                        </label>
                        <span class="text-danger" asp-validation-for="IsSubscribed"></span>

                        <div class="btn-wrapper">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <button class="theme-btn-1 btn reverse-color btn-block" type="submit">CREATE ACCOUNT</button>
                        </div>
                    </form>
                    <div class="by-agree text-center">
                        <p>By creating an account, you agree to our:</p>
                        <p><a href="#">TERMS OF CONDITIONS  &nbsp; &nbsp; | &nbsp; &nbsp;  PRIVACY POLICY</a></p>
                        <div class="go-to-btn mt-50">
                            <a asp-action="login" asp-controller="account">ALREADY HAVE AN ACCOUNT ?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- LOGIN AREA END -->
