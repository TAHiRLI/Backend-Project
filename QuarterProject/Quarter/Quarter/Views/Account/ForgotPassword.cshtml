@{
    ViewData["Title"] = "ForgotPassword";
}
@model ForgotPasswordViewModel

<div class="ltn__login-area pb-110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title-area text-center">
                    <h1 class="section-title">Recover <br>Your Account</h1>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="account-login-inner">
                    <form asp-action="forgotPassword" method="post" class="ltn__form-box contact-form-box" >
                        <input asp-for="Email" type="email" placeholder="Email*">
                        <span class="text-danger" asp-validation-for="Email"></span>
                        <div class="btn-wrapper">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <button class="theme-btn-1 btn reverse-color btn-block" type="submit">SEND EMAIL</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>